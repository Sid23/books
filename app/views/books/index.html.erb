<h1>.. Library Home Page ..</h1>
<h2>list of all available books</h2>
<%= image_tag("img.jpeg") %>
<br>
<p><%= link_to "Create a new book..", new_book_path() %></p>
<br>
<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Year</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.year %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Delete", book_path(book), method: :delete, data: {confirm: "Are you sure to delete this book?"} %></td>
        </tr>
    <% end %>
</table>